{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "API Collection Schema - Gen-Postman-Documentation",
  "type": "object",
  "properties": {
    "folder": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "items": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": ["request"]
              },
              "url": {
                "type": "string"
              },
              "method": {
                "type": "string",
                "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"]
              },
              "description": {
                "type": "string"
              },
              "body": {
                "oneOf": [
                  {
                    "type": "object",
                    "additionalProperties": false
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "additionalProperties": false
                    }
                  }
                ]
              },
              "headers": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "string"
                    },
                    "value": {
                      "type": "string"
                    }
                  },
                  "required": ["key", "value"]
                }
              },
              "responses": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "status": {
                      "type": "integer",
                      "enum": [
                        200, 201, 204, 304, 400, 401, 403, 404, 405, 409, 410,
                        415, 422, 429, 500, 503
                      ]
                    },
                    "body": {
                      "oneOf": [
                        {
                          "type": "object",
                          "additionalProperties": false
                        },
                        {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "additionalProperties": false
                          }
                        }
                      ]
                    }
                  },
                  "required": ["name", "status", "body"]
                }
              }
            },
            "required": ["name", "type", "url", "method", "description"]
          },
          {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": ["folder"]
              },
              "description": {
                "type": "string"
              },
              "items": {
                "type": "array",
                "items": {
                  "$ref": "#/properties/items/items"
                }
              }
            },
            "required": ["name", "type", "description", "items"]
          }
        ]
      }
    }
  },
  "required": ["folder", "description", "items"],
  "additionalProperties": false
}
